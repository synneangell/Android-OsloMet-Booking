<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/marker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Legg til bygning"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/navnBygning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="100dp"
        android:inputType="text"
        android:text="Navn pÃ¥ bygning" />

    <ImageView
        android:id="@+id/imgNavnBygning"
        app:srcCompat="@drawable/ic_baseline_business_24"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        />

    <EditText
        android:id="@+id/beskrivelseBygning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:inputType="text"
        android:text="Beskrivelse" />

    <ImageView
        android:id="@+id/imgBeskrivelseBygning"
        app:srcCompat="@drawable/ic_baseline_comment_24"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        />

    <EditText
        android:id="@+id/adresseBygning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="200dp"
        android:ems="10"
        android:inputType="text"
        android:text="Adresse" />

    <ImageView
        android:id="@+id/imgAdresseBygning"
        app:srcCompat="@drawable/ic_baseline_location_on_24"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/koordinater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="250dp"
        android:ems="10"
         />

    <Spinner
        android:id="@+id/spinnerEtasjer"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="310dp" />

    <ImageView
        android:id="@+id/imgEtasjer"
        app:srcCompat="@drawable/ic_baseline_layers_24"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/etasjer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="290dp"
        android:ems="10"
        android:text="Antall etasjer" />


</RelativeLayout>