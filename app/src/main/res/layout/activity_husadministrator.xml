<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hvit"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Toolbar
        android:id="@+id/toolbarHus"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@color/gul"/>

    <ImageView
        android:id="@+id/imgLagre"
        app:srcCompat="@drawable/ic_baseline_save_alt_24"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="350dp"
        android:layout_marginRight="10dp"
        android:onClick="lagre" />

    <TextView
        android:id="@+id/Navn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/svart"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="150dp"
        android:text="Navn" />

    <EditText
        android:id="@+id/navnBygning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="70dp"
        android:textColor="@color/svart"
        android:textColorHint="@color/svart"
        android:layout_marginTop="170dp"
        android:backgroundTint="@color/svart"
        android:inputType="text"/>

    <ImageView
        android:id="@+id/imgNavnBygning"
        app:srcCompat="@drawable/ic_baseline_business_24"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/txtBeskrivelse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/svart"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="220dp"
        android:text="Navn" />

    <EditText
        android:id="@+id/beskrivelseBygning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="240dp"
        android:textColor="@color/svart"
        android:textColorHint="@color/svart"
        android:backgroundTint="@color/svart"
        android:ems="10"
        android:inputType="text"/>

    <ImageView
        android:id="@+id/imgBeskrivelseBygning"
        app:srcCompat="@drawable/ic_baseline_comment_24"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/txtAdresseBygning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/svart"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="290dp"
        android:ems="10"
        android:inputType="text"
        android:text="Adresse" />

    <EditText
        android:id="@+id/adresseBygning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="310dp"
        android:textColor="@color/svart"
        android:textColorHint="@color/svart"
        android:backgroundTint="@color/svart"
        android:ems="10"
        android:inputType="text"/>

    <ImageView
        android:id="@+id/imgAdresseBygning"
        app:srcCompat="@drawable/ic_baseline_location_on_24"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        />

    <Spinner
        android:id="@+id/spinnerEtasjer"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:backgroundTint="@color/svart"
        android:layout_marginTop="380dp" />

    <TextView
        android:id="@+id/txtEtasjer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/svart"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="360dp"
        android:ems="10"
        android:inputType="text"
        android:text="Etasjer" />

    <ImageView
        android:id="@+id/imgEtasjer"
        app:srcCompat="@drawable/ic_baseline_layers_24"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        />


</RelativeLayout>