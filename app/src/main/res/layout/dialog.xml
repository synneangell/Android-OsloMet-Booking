<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/test2"
        android:layout_width="216dp"
        android:layout_height="256dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnReservasjon"
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/knapp"
            android:text="@string/opprettReservasjon"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnSlett"
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/knapp"
            android:text="@string/slettRom"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnSeReservasjon"
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/knapp"
            android:text="@string/seReservasjoner"
            android:textColor="#000000" />

    </LinearLayout>

</RelativeLayout>